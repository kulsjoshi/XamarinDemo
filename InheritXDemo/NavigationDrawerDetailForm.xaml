<?xml version="1.0" encoding="UTF-8"?>
<MasterDetailPage 
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="InheritXDemo.NavigationDrawerDetailForm" 
	xmlns:local="clr-namespace:InheritXDemo;Assembly=InheritXDemo">
	<MasterDetailPage.Master>
		<ContentPage Title="Navigation Drawer">
			<StackLayout Orientation="Vertical" BackgroundColor="Olive">
				<Label x:Name="navHome" Text="Home" TextColor="white" />
				<Label x:Name="navChangePassword" Text="Change Password" TextColor="white"  />
				<Label x:Name="navAboutUs" Text="About us" TextColor="white" />
				<Label x:Name="navLogout" Text="Logout" TextColor="white" />
			</StackLayout>
		</ContentPage>
	</MasterDetailPage.Master>
	
	<MasterDetailPage.Detail>
		<local:HomeForm />
	</MasterDetailPage.Detail>
	
</MasterDetailPage>