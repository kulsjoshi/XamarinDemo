<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="InheritXDemo.ChangePasswordForm" Title="Change Password">
	<ContentPage.Content>
		<StackLayout Orientation="Vertical">
			<Label x:Name="lableMobileNumber" Text="" FontSize="25" Margin="10,10,10,10" HorizontalOptions="FillAndExpand" />
			<Label Text="Old Password" Margin="10,10,10,10"/>
			<Entry x:Name="entryOldPassword" IsPassword="true" Text="" Margin="10,10,10,10"/>
			<Label Text="New Password" />
			<Entry x:Name="entryNewPassword" IsPassword="true" Text="" Margin="10,10,10,10" />
			<Label Text="Confirm Password" />
			<Entry x:Name="entryNewConfirmPassword" Text="" IsPassword="true" />
			<Button x:Name="btnChangePassword" Margin="10,10,10,10" HorizontalOptions="FillAndExpand" Text="Change" Clicked="clickChangePassword" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>